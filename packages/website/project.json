{
  "name": "@aws-samples/smart-product-onboarding-demo-website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/website/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": ["lint", "compile", "bundle", "test"]
    },
    "pre-compile": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf public/smart-product-onboarding-api",
          "mkdir -p public/smart-product-onboarding-api && cp ../api/model/.api.json public/smart-product-onboarding-api/api.json"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "inputs": ["{projectRoot}/../api/model/.api.json"],
      "outputs": ["{projectRoot}/public/smart-product-onboarding-api"]
    },
    "compile": {
      "executor": "nx:run-commands",
      "dependsOn": ["pre-compile"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc --build tsconfig.json",
        "cwd": "{projectRoot}"
      }
    },
    "bundle": {
      "executor": "@nx/vite:build",
      "dependsOn": ["pre-compile"],
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/website/bundle"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
        "cwd": "{projectRoot}"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
        "cwd": "{projectRoot}"
      }
    },
    "preview": {
      "dependsOn": ["build"],
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:bundle"
      },
      "configurations": {
        "development": {
          "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:bundle:development"
        },
        "production": {
          "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:bundle:production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": ["pre-compile"],
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:bundle:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:bundle:production",
          "hmr": false
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@aws-samples/smart-product-onboarding-demo-website:bundle",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/website"
      }
    }
  }
}
