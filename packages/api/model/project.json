{
  "name": "@aws-samples/smart-product-onboarding-api-model",
  "root": "packages/api/model",
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec type-safe-api parse-openapi-spec --specPath packages/api/model/src/main/openapi/main.yaml --outputPath packages/api/model/.api.json"
      },
      "inputs": ["{projectRoot}/src/**/*"],
      "outputs": ["{projectRoot}/.api.json"]
    },
    "compile": {
      "dependsOn": ["generate"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No tests defined for model package'"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No package step needed for model package'"
      }
    },
    "build": {
      "dependsOn": ["generate", "compile", "test", "package"]
    }
  }
}
